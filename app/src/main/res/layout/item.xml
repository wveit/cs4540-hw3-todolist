<?xml version="1.0" encoding="utf-8"?>

<!--
    Wilbert:
        # Added TextView for displaying the Category of a ToDoItem
        # Added CheckBox and a TextView (to label the CheckBox) for specifying a ToDoItem is complete
        # Added Layout and formatting code
-->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:padding="2dp"
    android:background="#000">

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="To do description"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:background="#6DD"/>

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:background="#DD6"/>

    <TextView
        android:id="@+id/dueDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="06-04-2017"
        android:layout_margin="2dp"
        android:padding="5dp"
        android:background="#D6D"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#DDD"
        android:layout_margin="2dp"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/completed_checkbox_label"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_completed"/>

    </LinearLayout>

</LinearLayout>